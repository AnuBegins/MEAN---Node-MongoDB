
<html lang="en">
    <%- include('base_head'); %>

  <body>
    <div class="container text-center mb-5">
    <!------------	NAVIGATION BAR ---------------- -->
    <%- include('base_navbar'); %>
    </div>

    <div class="container mx-auto">
        <h1 class="text-info text-center ">Doggie Dashboard using Mongoose</h1>
        <!-------------- FLASH Messages------------------------------- -->
        <% JSON.stringify(messages) %>  
        <% if(messages.registration) { %> <!-- based on the structure of your messages, determine how to display them -->
            <% for (var x of messages.registration) { %>
            <p class="text-danger"><%= x %></p>
            <% } %>
        <% } %>
        <hr>
        <!-------------- Table ------------------------------- -->
        <table class="table table-striped table-responsive">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Breed</th>
                    <th>Age</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            <% for (var x in allDogs) { %>
                <tr>
                    <td scope="row"><a href="/dogs/<%= allDogs[x]['_id'] %>"> <%= allDogs[x]['name'] %></a></td>
                    <td scope="row"><%= allDogs[x]['breed'] %></td>
                    <td scope="row"><%= allDogs[x]['age'] %></td>
                    <td scope="row">
                        <!-- <a class="d-inline" href="#" title="Edit"><i class="far fa-edit text-info mr-1"></i></a> | -->
                        <a class="d-inline" href="" title="Edit" data-toggle="modal" data-target="#modalEdit" data-object = "<%= allDogs[x] %>" data-id="<%= allDogs[x]['_id'] %>" data-name="<%= allDogs[x]['name'] %>" data-breed="<%= allDogs[x]['breed'] %>" data-age="<%= allDogs[x]['age'] %>"  ><i class="far fa-edit text-info mr-1"></i></a> |

                        <!--  Delete button	 -->
                        <a class="d-inline" href="/dogs/destroy/<%= allDogs[x]['_id'] %>" title="Delete"><i class="far fa-trash-alt text-secondary ml-1"></i></a>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
    <%- include('base_scripts'); %>
    <%- include('modal_create'); %>
    <%- include('modal_edit'); %>
    </body>

</html>