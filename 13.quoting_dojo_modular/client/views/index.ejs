
<html lang="en">
    <%- include('base_head'); %>

  <body>
        <div class="container text-center mb-5">
        <!------------	NAVIGATION BAR ---------------- -->
        <%- include('base_navbar'); %>
        </div>

        <div class="container mx-auto">
            <h1 class="text-primary text-center mb-2">Welcome to Quoting Dojo</h1>


            <div class="row">

                    <div class="col-md-5 ">
                        <form action='/quotes' method='POST' class="text-center">
                            <div class="md-form">
                                <input mdbInput type="text" name="source" id="" class="form-control" placeholder="Source" aria-describedby="helpId">
                            </div>
                            <!-- <div class="form-group row">
                                <label class="col-form-label col-sm-2" for="">Quote</label>
                                <div class="col-md">
                                    <textarea class="form-control" name="quote" id="" rows="3"></textarea>
                                </div>
                            </div> -->
                            <!--Material textarea-->
                            <div class="md-form md-outline">
                                <textarea type="text" placeholder="Type a quote" id="form75" class="form-control md-textarea" rows="3" name="quote" mdbInput></textarea>
                            </div>
                            <button type="submit" class="btn btn-sm btn-success">Add my quote!</button>
                        </form>
                                    <!-------------- FLASH Messages------------------------------- -->
                    <% JSON.stringify(messages) %>  <!-- tip to easily see objects printed in full instead of [object Object] -->
                    <% if(messages.registration) { %> <!-- based on the structure of your messages, determine how to display them -->
                        <% for (var x of messages.registration) { %>
                        <p class="text-danger"><%= x %></p>
                        <% } %>
                    <% } %>
                    </div>

                <div class="col-md-1"></div>
                <div class="col-md-6 z-depth-3">
                    <h1 class="text-primary text-center"></h1>
                    <% for (var x in quotes) { %>
                        <p class="font-weight-bold"><%= quotes[x]['quote'] %></p>
                        <p> -- <%= quotes[x]['source'] %> | <%= quotes[x]['createdAt'].toDateString(); %> </p>
                        <hr>
                    <% } %>
                </div>
            </div>
        </div>


    <%- include('base_scripts'); %>
    </body>

</html>