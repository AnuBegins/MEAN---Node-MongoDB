
<html lang="en">
    <%- include('base_head'); %>

  <body>
        <div class="container text-center mb-5">
        <!------------	NAVIGATION BAR ---------------- -->
        <%- include('base_navbar'); %>
        </div>

        <div class="container mx-auto">
            <h1 class="text-primary text-center mb-2">Welcome to Quoting Dojo</h1>

            <div class="container">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-8 z-depth-3">
                        <form action='/quotes' method='POST' class="text-center">
                            <div class="form-group row mt-2">
                                <label class="col-form-label col-md-2" for="">Source</label>
                                <div class="col-md">
                                    <input type="text" name="source" id="" class="form-control" placeholder="" aria-describedby="helpId">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-2" for="">Quote</label>
                                <div class="col-md">
                                    <textarea class="form-control" name="quote" id="" rows="3"></textarea>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-sm btn-success">Add my quote!</button>
                        </form>
                    </div>
                    <!-- <div class="col-md-2"></div> -->
                </div>
            </div>


            <!-------------- FLASH Messages------------------------------- -->
            <%- JSON.stringify(messages) %>  <!-- tip to easily see objects printed in full instead of [object Object] -->
            <% if(messages.registration) { %> <!-- based on the structure of your messages, determine how to display them -->
                <% for (var x of messages.registration) { %>
                <p class="text-danger"><%= x %></p>
                <% } %>
            <% } %>
            <hr>
        <div class="container">
            <div class="row ">
                <div class="col-md-2"></div>
                <div class="col-md-8 z-depth-3">
                    <h1 class="text-primary text-center">Quotations...</h1>
                    <% for (var x in quotes) { %>
                        <p class="font-weight-bold"><%= quotes[x]['quote'] %></p>
                        <p> -- <%= quotes[x]['source'] %> | <%= quotes[x]['createdAt'].toDateString(); %> </p>
                        <hr>
                    <% } %>
                </div>
                <!-- <div class="col-md-2"></div> -->
            </div>
        </div>



        </div>

    <%- include('base_scripts'); %>
    </body>

</html>