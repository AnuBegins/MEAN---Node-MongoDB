
<html lang="en">
    <%- include('base_head'); %>

  <body>
        <div class="container text-center mb-5">
        <!------------	NAVIGATION BAR ---------------- -->
        <%- include('base_navbar'); %>
        </div>

        <div class="container mx-auto">
            <h1 class="text-info text-center "><%= dog.name %></h1>
            <!-------------- FLASH Messages------------------------------- -->
        <!--    <%- JSON.stringify(messages) %>  tip to easily see objects printed in full instead of [object Object] -->
            <% if(messages.registration) { %> <!-- based on the structure of your messages, determine how to display them -->
                <% for (var x of messages.registration) { %>
                <p class="text-danger"><%= x %></p>
                <% } %>
            <% } %>
            <hr>

    <!-------------- Table ------------------------------- -->
    <table class="table table-striped table-responsive">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Breed</th>
                    <th>Age</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td scope="row"><%= dog.name %></td>
                    <td scope="row"><%= dog.breed %></td>
                    <td scope="row"><%= dog.age %></td>
                    <td scope="row">
                        <!-- <a class="d-inline" href="#" title="Edit"><i class="far fa-edit text-info mr-1"></i></a> | -->
                        <!-- <a class="d-inline" href="" title="Edit" data-toggle="modal" data-target="#modalEditEvent" data-object="${event}"><i class="far fa-edit text-info mr-1"></i></a> -->
                        <a class="d-inline" href="" title="Edit" data-toggle="modal" data-target="#modalEdit" 
                        data-object = "<%= dog %>" data-id="<%= dog.id %>" data-name="<%= dog.name %>" data-breed="<%= dog.breed %>" data-age="<%= dog.age %>"  ><i class="far fa-edit text-info mr-1"></i></a> |

                        <!--  Delete button	 -->
                        <a class="d-inline" href="/dogs/destroy/<%= dog.id %>" title="Delete"><i class="far fa-trash-alt text-secondary ml-1"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>

        </div>
    <%- include('base_scripts'); %>
    <%- include('modal_create'); %>
    <%- include('modal_edit'); %>
    </body>

</html>