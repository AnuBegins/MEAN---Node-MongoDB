

<!---------------   MODAL VIEW for CREATE NEW EVENT  ----------------------- -->
<div class="modal fade" id="modalCreate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" style="opacity:0.9;">

            <div class="modal-header d-flex justify-content-center ">
                <h3 class="modal-title text-info " >Add a dog</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span></button>
            </div>

            <div class="modal-body">
                <form action="/dogs" method="POST" >

                    <div class="mx-3">
                        <div class="md-form mb-0 ">
                            <!-- <form:errors path = "name" element ="p" class="small text-danger" /> -->
                            <input type = "text" name = "name" id = "name" class="form-control" placeholder="Dog's name" />
                        </div>

                        <div class="md-form mb-0 ">
                            <input type="text" name = "breed" id="breed" class="form-control " placeholder = "Breed" />
                        </div>

                        <div class="md-form mb-0 ">
                            <input type="number" name = "age" id="age" class="form-control " placeholder="Age (years)"/>
                        </div>

                    </div>
                    <br>
                    <div class="d-flex justify-content-center ">
                        <button type="submit" class="d-inline btn btn-sm btn-primary">Add dog</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>